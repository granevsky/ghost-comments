{
  "name": "ghost-comments",
  "displayName": "Ghost Comments",
  "description": "%extension.description%",
  "version": "1.1.0",
  "publisher": "Granevsky",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/granevsky/ghost-comments"
  },
  "bugs": {
    "url": "https://github.com/granevsky/ghost-comments/issues"
  },
  "engines": {
    "vscode": "^1.80.0",
    "pnpm": "^10.5.2"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "comments",
    "notes",
    "annotation",
    "ghost",
    "review"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ghost-comments.addComment",
        "title": "%command.addComment%"
      },
      {
        "command": "ghost-comments.syncFile",
        "title": "%command.syncFile%"
      },
      {
        "command": "ghost-comments.sortByAlpha",
        "title": "%command.sortByAlpha%",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "ghost-comments.sortByDate",
        "title": "%command.sortByDate%",
        "icon": "$(history)"
      },
      {
        "command": "ghost-comments.filterComments",
        "title": "%command.filterComments%",
        "icon": "$(filter)"
      },
      {
        "command": "ghost-comments.clearFilter",
        "title": "%command.clearFilter%",
        "icon": "$(clear-all)"
      },
      {
        "command": "ghost-comments.changeLanguage",
        "title": "%command.changeLanguage%"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ghost-comments.sortByAlpha",
          "when": "view == ghost-comments-view && config.ghost-comments.sortOrder == date",
          "group": "navigation@1"
        },
        {
          "command": "ghost-comments.sortByDate",
          "when": "view == ghost-comments-view && config.ghost-comments.sortOrder == alpha",
          "group": "navigation@1"
        },
        {
          "command": "ghost-comments.filterComments",
          "when": "view == ghost-comments-view && !ghost-comments:isFiltered",
          "group": "navigation@2"
        },
        {
          "command": "ghost-comments.clearFilter",
          "when": "view == ghost-comments-view && ghost-comments:isFiltered",
          "group": "navigation@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ghost-comments.addComment",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ghost-comments-container",
          "title": "%views.container.title%",
          "icon": "images/ghost-comments.svg"
        }
      ]
    },
    "views": {
      "ghost-comments-container": [
        {
          "id": "ghost-comments-view",
          "name": "%views.comments.name%",
          "when": "config.ghost-comments.showCommentManager"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "ghost-comments.showCommentManager": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.showCommentManager.desc%"
        },
        "ghost-comments.sortOrder": {
          "type": "string",
          "enum": [
            "alpha",
            "date"
          ],
          "default": "alpha",
          "description": "%configuration.sortOrder.desc%"
        },
        "ghost-comments.displayMode": {
          "type": "string",
          "enum": [
            "right",
            "left",
            "codelens"
          ],
          "default": "right",
          "description": "%configuration.displayMode.desc%"
        },
        "ghost-comments.author": {
          "type": "string",
          "default": "",
          "description": "%configuration.author.desc%"
        },
        "ghost-comments.filename": {
          "type": "string",
          "default": ".ghost-comments.json",
          "description": "%configuration.filename.desc%"
        },
        "ghost-comments.autoSyncOnSave": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.autoSyncOnSave.desc%"
        },
        "ghost-comments.searchRange": {
          "type": "number",
          "default": 15,
          "description": "%configuration.searchRange.desc%"
        },
        "ghost-comments.maxFileSize": {
          "type": "number",
          "default": 5242880,
          "description": "%configuration.maxFileSize.desc%"
        },
        "ghost-comments.maxCommentLength": {
          "type": "number",
          "default": 500,
          "description": "%configuration.maxCommentLength.desc%"
        },
        "ghost-comments.language": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "ru"
          ],
          "default": "auto",
          "description": "Language for dynamic UI text ('auto' for system language)."
        },
        "ghost-comments.colors.textColor": {
          "type": "string",
          "default": "#6a9953",
          "description": "%configuration.colors.textColor.desc%"
        },
        "ghost-comments.colors.errorColor": {
          "type": "string",
          "default": "#ff9900",
          "description": "%configuration.colors.errorColor.desc%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "npm run compile-tests && node ./out/test/runTest.js",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.0.0",
    "glob": "^13.0.2",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.54.0"
  },
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b"
}